name: Genereer voetbalnieuws (Voetbalkoppen)

on:
  schedule:
    - cron: "0 6 * * *"   # elke dag om 06:00 UTC
  workflow_dispatch: {}    # handmatig starten

permissions:
  contents: write

jobs:
  generate-news:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install openai

      - name: Generate news.json via OpenAI
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          python scripts/generate_news.py

      - name: Commit and push if changed
        run: |
          if git diff --quiet; then
            echo "Geen wijzigingen aan news.json.";
          else
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add data/news.json
            git commit -m "Automatisch voetbalnieuws bijgewerkt"
            git push
          fi
